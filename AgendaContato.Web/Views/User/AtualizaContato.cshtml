@model ContatoModel

@{
    ViewData["Title"] = "Editar Contato";
}

<div class="container">
    <h2>Editar Contaro</h2>

    <form asp-controller="User" asp-action="Atualiza">

        <input type="hidden" id="idContato" asp-for="IdContato">
        
        <div style="min-width: 1000px;">
            <div style="min-width: 1000px;">
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="nome" placeholder="Digite o nome" asp-for="Nome" required>
                </div>
                <div class="mb-3">
                    <label for="sobrenome" class="form-label">Sobrenome</label>
                    <input type="text" class="form-control" id="sobrenome" placeholder="Digite o sobrenome" asp-for="Sobrenome">
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary" style="height: 40px;">Cadastrar</button>
                </div>
            </div>
        </div>

    </form>
</div>